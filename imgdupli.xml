<?xml version="1.0" encoding="UTF-8"?>
<project name="imgdupli" default="all">


    <property file="imgdupli.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.bundle/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/.tox/**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/RCS/**"/>
        <exclude name="**/SCCS/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/rcs/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.war"/>
        <include name="*.ear"/>
        <include name="*.apk"/>
        <include name="*.zip"/>
        <include name="*.swc"/>
        <include name="*.ane"/>
        <include name="*.egg"/>
        <include name="*.jar"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
        <exclude name="**/?*.aj"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
    <path id="jdk.classpath.1.8">
        <fileset dir="${jdk.home.1.8}">
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/deploy.jar"/>
            <include name="jre/lib/javaws.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jfr.jar"/>
            <include name="jre/lib/jfxswt.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/plugin.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
            <include name="jre/lib/ext/access-bridge-64.jar"/>
            <include name="jre/lib/ext/cldrdata.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/jaccess.jar"/>
            <include name="jre/lib/ext/jfxrt.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/nashorn.jar"/>
            <include name="jre/lib/ext/sunec.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
            <include name="jre/lib/ext/sunmscapi.jar"/>
            <include name="jre/lib/ext/sunpkcs11.jar"/>
            <include name="jre/lib/ext/zipfs.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.8}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <pathelement location="${javac2.home}/javac2.jar"/>
        <pathelement location="${javac2.home}/jdom.jar"/>
        <pathelement location="${javac2.home}/asm-all.jar"/>
        <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->


    <!-- Module imgDupli -->

    <dirname property="module.imgdupli.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.imgdupli" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.imgdupli" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.imgdupli" value="${project.jdk.classpath}"/>

    <property name="compiler.args.imgdupli" value="-encoding windows-1252 -source 8 ${compiler.args}"/>

    <property name="imgdupli.output.dir" value="${module.imgdupli.basedir}/out/production/imgDupli"/>
    <property name="imgdupli.testoutput.dir" value="${module.imgdupli.basedir}/out/test/imgDupli"/>

    <path id="imgdupli.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="imgdupli.module.production.classpath">
        <path refid="${module.jdk.classpath.imgdupli}"/>
    </path>

    <path id="imgdupli.runtime.production.module.classpath">
        <pathelement location="${imgdupli.output.dir}"/>
    </path>

    <path id="imgdupli.module.classpath">
        <path refid="${module.jdk.classpath.imgdupli}"/>
        <pathelement location="${imgdupli.output.dir}"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    </path>

    <path id="imgdupli.runtime.module.classpath">
        <pathelement location="${imgdupli.testoutput.dir}"/>
        <pathelement location="${imgdupli.output.dir}"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    </path>


    <patternset id="excluded.from.module.imgdupli">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.imgdupli">
        <patternset refid="excluded.from.module.imgdupli"/>
    </patternset>

    <path id="imgdupli.module.sourcepath">
        <dirset dir="${module.imgdupli.basedir}">
            <include name="src"/>
        </dirset>
    </path>

    <path id="imgdupli.module.test.sourcepath">
        <dirset dir="${module.imgdupli.basedir}">
            <include name="test"/>
        </dirset>
    </path>


    <target name="compile.module.imgdupli" depends="compile.module.imgdupli.production,compile.module.imgdupli.tests"
            description="Compile module imgDupli"/>

    <target name="compile.module.imgdupli.production" depends="register.custom.compilers"
            description="Compile module imgDupli; production classes">
        <mkdir dir="${imgdupli.output.dir}"/>
        <javac2 destdir="${imgdupli.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.imgdupli}/javac">
            <compilerarg line="${compiler.args.imgdupli}"/>
            <bootclasspath refid="imgdupli.module.bootclasspath"/>
            <classpath refid="imgdupli.module.production.classpath"/>
            <src refid="imgdupli.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.imgdupli"/>
        </javac2>

        <copy todir="${imgdupli.output.dir}">
            <fileset dir="${module.imgdupli.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.imgdupli.tests" depends="register.custom.compilers,compile.module.imgdupli.production"
            description="compile module imgDupli; test classes" unless="skip.tests">
        <mkdir dir="${imgdupli.testoutput.dir}"/>
        <javac2 destdir="${imgdupli.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.imgdupli}/javac">
            <compilerarg line="${compiler.args.imgdupli}"/>
            <bootclasspath refid="imgdupli.module.bootclasspath"/>
            <classpath refid="imgdupli.module.classpath"/>
            <src refid="imgdupli.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.imgdupli"/>
        </javac2>

        <copy todir="${imgdupli.testoutput.dir}">
            <fileset dir="${module.imgdupli.basedir}/test">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.imgdupli" description="cleanup module">
        <delete dir="${imgdupli.output.dir}"/>
        <delete dir="${imgdupli.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.imgdupli" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.imgdupli" description="build all modules"/>

    <target name="init.artifacts">
        <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
        <property name="artifact.output.imgdupli" value="${basedir}/../../imgDupli"/>
        <mkdir dir="${artifacts.temp.dir}"/>
        <property name="temp.jar.path.imgDupli.jar" value="${artifacts.temp.dir}/imgDupli.jar"/>
    </target>

    <target name="artifact.imgdupli" depends="init.artifacts, compile.module.imgdupli"
            description="Build &#39;imgDupli&#39; artifact">
        <property name="artifact.temp.output.imgdupli" value="${artifacts.temp.dir}/imgDupli"/>
        <mkdir dir="${artifact.temp.output.imgdupli}"/>
        <jar destfile="${temp.jar.path.imgDupli.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
            <zipfileset dir="${imgdupli.output.dir}"/>
            <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
        </jar>
        <copy file="${temp.jar.path.imgDupli.jar}" tofile="${artifact.temp.output.imgdupli}/imgDupli.jar"/>
    </target>

    <target name="build.all.artifacts" depends="artifact.imgdupli" description="Build all artifacts">
        <mkdir dir="${artifact.output.imgdupli}"/>
        <copy todir="${artifact.output.imgdupli}">
            <fileset dir="${artifact.temp.output.imgdupli}"/>
        </copy>

        <!-- Delete temporary files -->
        <delete dir="${artifacts.temp.dir}"/>
    </target>

    <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>